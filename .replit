run = [
    "deno",
    "run",
    "--lock=lock.json",
    "--lock-write",
    "--allow-all",
    "mod.ts"
]

hidden = [".deno"]

entrypoint = "index.ts"

# Unpublished requires configuration
[languages.deno]
pattern = "**/*.{ts,js}"
[languages.deno.languageServer]
start = ["deno", "lsp", "-q"]

[env]
XDG_CONFIG_HOME = "/home/runner/.config"

[nix]
channel = "stable-22_05"

[packager]
language = "nodejs"

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true
